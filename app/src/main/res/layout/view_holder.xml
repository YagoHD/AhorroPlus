<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/nombre_Producto"
        android:layout_width="wrap_content"
        android:textSize="20dp"

        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"

        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toEndOf="@+id/nombre_Producto"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_Supermercado"
        android:layout_width="wrap_content"
        android:background="@drawable/eroski"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/precio"
        app:layout_constraintBottom_toBottomOf="@id/precio"
        app:layout_constraintStart_toEndOf="@id/precio"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/chek_Comprado"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@id/logo_Supermercado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/logo_Supermercado"
        app:layout_constraintTop_toTopOf="@+id/logo_Supermercado"
        app:layout_constraintVertical_bias="0.525" />


</androidx.constraintlayout.widget.ConstraintLayout>